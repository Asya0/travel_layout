$main_dark = #000
$main_lite = #fff
$main_highlite = #FBD784
$main_buttons = #FFA343
$main_shift = 4.7rem;

html,
body {
    font: 18px/1.7 'Open Sans', sans-serif;
}

body {
    background: $main_dark url("/images/cover.jpg") no-repeat center top;
    background-size: 100% auto;
    color: $main_lite;
}


a {
    color: $main_highlite;
    transition: opacity 0.3s;
    opacity: 1;

    &:visited {
        color: darken($main_highlite, 10);
    }

    &:hover,
    &:active {
        opacity: 0.7;
    }
}
/*Main styles*/
.cover-space {
    padding-bottom 82%
    // 1573*100/1920=82% 1920-ширина, 1573-высота
}
.header {
    position absolute
    top 2rem
    width 100%
    &__content {
        display flex
        justify-content space-between
        padding: 0 $main_shift
        align-items center
    }
    &__center {
        display flex
        justify-content center    
        gap 50px
    }
}

.logo {
    color: $main_lite;
    text-decoration none
    letter-spacing 1%
    align-items: center

    &:visited {
        color: $main_lite;
    }

    &:hover,
    &:active {
    color: $main_highlite;
    }
    &__title {
        font-size 1.3rem
        font-weight 700 
    }
}
.main-nav {
    &__list {
        display flex
        justify-content center
        gap 50px
    }
    &__link {
        color: $main_lite;
        text-decoration: none
        padding: 1.8rem 1.38rem;
        display: inline-block; 

        &:visited  {
            color: $main_lite;
        }
    }
}

.search {
    display flex
    align-items center
    justify-content center

    &__icon {
        width 1rem
        height 1rem
        background url("/images/icons/search.svg") no-repeat center center
        background-size content
        cursor pointer
        padding-right 0.5rem
    }

/*плавное появдение строки поиска*/

    &__form {
        background none
        border none
        transition width 0.3s
        width 3.4rem
        font 0.9rem/1 'Open Sans', sans-serif
        padding 0.2rem 0.5rem
        border-radius: 5px

    // делает поиск невидимой, появляется при фокусе на инпут
        &::placeholder {
            color: white
            opacity 1    
        }

        &:focus {
            border: none
            outline: none    
            width 10rem
            background: white

                &::placeholder {
                    color:  $main_dark
                    opacity 1    
                }
        }
        }
}
